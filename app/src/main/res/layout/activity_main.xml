<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECB3"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:weightSum="3">

            <ImageView
                android:id="@+id/coffeeImage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/coffee_house"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/capuccinoImage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/coffee_house"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/HotChocolateImage"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:src="@drawable/coffee_house"
                android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/coffeeText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Coffee" />

        <TextView
            android:id="@+id/capuccinoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Capuccino" />

        <TextView
            android:id="@+id/hotChocolateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Hot Chocolate" />


    </LinearLayout>

</LinearLayout>
